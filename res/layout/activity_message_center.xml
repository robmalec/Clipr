<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.clipr.clipr.messageCenter">

    <RelativeLayout
        android:id="@+id/exampleMessagePreviewLayout"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <TextView
            android:id="@+id/senderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="TextView" />

        <TextView
            android:id="@+id/messageContents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/senderText"
            android:layout_marginStart="53dp"
            android:layout_toEndOf="@+id/senderText"
            android:text="TextView" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutAllMessages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnSendNewMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foregroundGravity="center_vertical"
            app:srcCompat="@drawable/fui_ic_mail_white_24dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="471dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
